<h1>Confirm your account.</h1>

<div class="row">
  <div class="span4 offset4">
    <%= form_for @user, :as => :user, :url => verify_user_path(@user), :method => :put, :html => {:class => "form-horizontal"}  do |f| %>
      <%= render 'shared/error_messages', :object => f.object %>

      <%= form_div(f.label(:name, :class => "control-label"), f.text_field(:name)) %>

      <%= form_div(f.label(:email, :class => "control-label"), f.text_field(:email)) %>

      <%= form_div(f.label(:password, :class => "control-label"), f.password_field(:password)) %>

      <%= form_div(f.label(:password_confirmation, :class => "control-label"), f.password_field(:password_confirmation)) %>

      <div class="form-actions">
        <%= f.submit "Confirm", :class => "btn btn-success" %>
      </div>

    <% end %>

    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">change</a>
  </div>
</div>
