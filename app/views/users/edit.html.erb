
<div class="row">
  <div class="span4 offset4">
    <h1>Update your profile</h1>
    <%= form_for(@user, :html => {:class => "form-horizontal"}) do |f| %>
      <%= render 'shared/error_messages', :object => f.object %>

      <%= form_div(f.label(:name, :class => "control-label"), f.text_field(:name)) %>

      <%= form_div(f.label(:email, :class => "control-label"), f.text_field(:email)) %>

      <%= form_div(f.label(:password, :class => "control-label"), f.password_field(:password)) %>

      <%= form_div(f.label(:password_confirmation, :class => "control-label"), f.password_field(:password_confirmation)) %>

      <div class="form-actions">
        <%= f.submit "Save", :class => "btn btn-primary" %>
        <%= link_to "Back", @user, :class => "btn" %>
      </div>

    <% end %>

    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">change</a>
  </div>
</div>
